<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  <body>
    <%- include('../partials/header') %>

    <main>
      <h1>Inventory Management</h1>

      <% if (message && message.length > 0) { %>
        <p class="notice"><%= message %></p>
      <% } %>

      <ul>
        <li><a href="/inv/add-classification">Add New Classification</a></li>
        <li><a href="/inv/add-inventory">Add New Vehicle</a></li>
      </ul>

      <h2>Manage Vehicles by Classification</h2>
      <form id="classificationForm">
        <label for="classificationList">Choose a classification:</label><br>
        <%- classificationList %>
      </form>

      <noscript><strong>JavaScript must be enabled to use this feature.</strong></noscript>
      <table id="inventoryDisplay"></table>
    </main>

    <%- include('../partials/footer') %>
    <script src="/js/inventory.js"></script>
  </body>
</html>
